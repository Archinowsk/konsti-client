{
  "name": "konsti-client",
  "version": "0.0.1",
  "private": true,
  "main": "server.js",
  "description": "Konsti signup tool client",
  "author": {
    "name": "Arttu Hanska"
  },
  "scripts": {
    "analyze": "webpack-cli --profile --json > stats.json && webpack-bundle-analyzer stats.json -m assets -r report.html",
    "build": "webpack-cli",
    "eslint": "eslint src",
    "flow": "flow check",
    "flow-typed-install": "flow-typed install --skip --overwrite --ignoreDeps peer bundle",
    "precommit": "npm run flow && lint-staged",
    "prettier": "prettier --write \"src/**/*.{js,json,scss}\"",
    "start": "webpack-dev-server",
    "stylelint": "stylelint \"src/**/*.scss\" --fix"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.51",
    "axios": "^0.18.0",
    "i18next": "^11.3.3",
    "i18next-browser-languagedetector": "^2.2.0",
    "i18next-xhr-backend": "^1.5.1",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-i18next": "^7.7.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-form": "^7.4.2",
    "redux-thunk": "^2.3.0",
    "request": "^2.87.0",
    "request-promise-native": "^1.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "@babel/preset-flow": "^7.0.0-beta.51",
    "@babel/preset-react": "^7.0.0-beta.51",
    "autoprefixer": "^8.6.4",
    "babel-eslint": "^8.2.5",
    "babel-loader": "^8.0.0-beta.4",
    "bundle-loader": "^0.5.6",
    "clean-webpack-plugin": "^0.1.19",
    "compression-webpack-plugin": "^1.1.11",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^0.28.11",
    "doiuse": "^4.1.0",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-compat": "^2.4.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-flowtype-errors": "^3.5.1",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-standard": "^3.1.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "flow-bin": "^0.75.0",
    "flow-typed": "^2.4.0",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-template": "^6.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "moment-locales-webpack-plugin": "^1.0.7",
    "node-sass": "^4.9.0",
    "postcss": "^6.0.23",
    "postcss-autoreset": "^2.0.2",
    "postcss-flexbugs-fixes": "^3.3.1",
    "postcss-loader": "^2.1.5",
    "postcss-normalize": "^6.0.0",
    "postcss-scss": "^1.0.6",
    "prettier": "^1.13.6",
    "react-hot-loader": "^4.3.3",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "stylelint": "^9.3.0",
    "stylelint-config-prettier": "^3.3.0",
    "stylelint-config-sass-guidelines": "^5.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-no-unsupported-browser-features": "^3.0.0",
    "stylelint-scss": "^3.1.3",
    "webpack": "^4.12.2",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.3"
  },
  "lint-staged": {
    "src/**/*.json": [
      "npm run prettier",
      "git add"
    ],
    "src/**/*.scss": [
      "npm run stylelint",
      "npm run prettier",
      "git add"
    ],
    "src/**/*.js": [
      "npm run eslint",
      "npm run prettier",
      "git add"
    ]
  }
}
